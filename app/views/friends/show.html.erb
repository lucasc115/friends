<!-- show.html.erb -->
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="card">
        <!-- If you have an image for the friend, use that image URL instead of the placeholder -->
        <img src="https://via.placeholder.com/150" class="card-img-top mt-3" alt="Avatar" style="width: 150px; height: 150px; object-fit: cover; border-radius: 50%; margin-left: auto; margin-right: auto;">

        <div class="card-body text-center">
          <h4 class="card-title"><%= @friend.first_name %> <%= @friend.last_name %></h4>
          <p class="card-text"><%= @friend.email %></p>
          <p class="card-text"><%= @friend.phone %></p>
          <p class="card-text">@<%= @friend.twitter %></p>

          <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mt-3">
            <%= link_to "Edit this friend", edit_friend_path(@friend), class: 'btn btn-primary' %>
            <%= link_to "Back to friends", friends_path, class: 'btn btn-secondary' %>
            <%= button_to "Delete this friend", @friend, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
